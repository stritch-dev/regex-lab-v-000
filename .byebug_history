  text.downcase.scan((/^un[\w\W]*ing/)  
  text.downcase.match((/^un[\w\W]*ing/)*)  
  text.downcase.match((/^un[\w\W]*ing/)  
  text.downcase.match(/^un[\w\W]*ing/)  ? true : false
